<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoaderView">
        <attr name="loading_resourceID" format="reference"/>
        <attr name="idle_resourceID" format="reference"/>
        <attr name="error_resourceID" format="reference"/>
        <attr name="extra_resourceID" format="reference"/>
        <attr name="state">
            <enum name="loading" value="0"/>
            <enum name="idle" value="1"/>
            <enum name="error" value="2"/>
            <enum name="extra" value="3"/>
        </attr>
        <attr name="error_message" format="string"/>
    </declare-styleable>
</resources>